{
  "version": 2,
  "builds": [
    { "src": "webroot/**/*", "use": "@vercel/static" },
    { "src": "src/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/index.js" },
    { "src": "/(.*)", "dest": "/webroot/$1" }
  ],
  "buildCommand": "cd react-app && npm install && npm run build",
  "installCommand": "npm install && cd react-app && npm install"
}
